= form_for @todo_list_item do |f|
  - if @todo_list_item.errors.any?
    #error_explanation
      %h2= "#{pluralize(@todo_list_item.errors.count, "error")} prohibited this todo_list_item from being saved:"
      %ul
        - @todo_list_item.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
    -if @todo_list
      = f.hidden_field :todo_list_id, :value => @todo_list.id
    -else
      = f.hidden_field :todo_list_id, :value => @todo_list_item.todo_list.id
  .actions
    = f.submit 'Save'
