%h1 Listing clients
%table
  %thead
    %tr
      %th Name
      %th Description
      %th
      %th
      %th
  %tbody
    - @clients.each do |client|
      %tr
        %td= client.name
        %td= client.description
        %td= link_to 'Show', client
        %td= link_to 'Edit', edit_client_path(client)
        %td= link_to 'Destroy', client, method: :delete, data: { confirm: 'Are you sure?' }
        %td= link_to 'New project', new_client_project_path(client)
%br/
= link_to 'New Client', new_client_path
