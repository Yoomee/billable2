= form_for @todo_list do |f|
  - if @todo_list.errors.any?
    #error_explanation
      %h2= "#{pluralize(@todo_list.errors.count, "error")} prohibited this todo_list from being saved:"
      %ul
        - @todo_list.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
    -if @project
      = f.hidden_field :project_id, :value => @project.id
    -else 
      = f.hidden_field :project_id, :value => @todo_list.project.id
  .field
    = f.label :budget
    = f.number_field :budget
  .field
    = f.label :billable
    = f.check_box :billable  
  .actions
    = f.submit 'Save'
